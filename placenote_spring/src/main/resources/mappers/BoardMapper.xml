<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.springboot.placenote.domain.board.BoardRepository">
	<insert id="insertBoard"
		parameterType="com.springboot.placenote.domain.board.Board"
		useGeneratedKeys="true" keyColumn="board_id" keyProperty="board_id">
		INSERT INTO
		board_mst
		VALUES(
		0,
		#{writer},
		#{keyword},
		#{place_name},
		#{location},
		#{board_content},
		NOW(),
		NOW()
		);
	</insert>

	<insert id="insertFiles"
		parameterType="com.springboot.placenote.domain.board.Board">
		INSERT INTO
		board_file
		VALUES
		<foreach collection="file_name" item="file_name" separator=",">
			(
			0,
			#{board_id},
			#{file_name}
			)
		</foreach>
		;
	</insert>
</mapper>